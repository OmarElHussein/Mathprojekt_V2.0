<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VektorrechnungClasses">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/buttonBestaetigen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="201dp"
        android:background="@drawable/button_rectangle_shape"
        android:onClick="setButtonBestaetigen"
        android:text="\u2713"
        app:layout_constraintBottom_toBottomOf="@+id/editTextArray2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextArray2"
        app:layout_constraintTop_toTopOf="@+id/editTextArray2" />

    <EditText
        android:id="@+id/editTextArray2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_rectangle_with_border_shape"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/buttonNewEingabe"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="80dp"
        android:onClick="setButtonNewEingabe"
        android:text="Neue Eingabe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBestaetigen2" />

    <Button
        android:id="@+id/buttonLoeschen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="setButtonLoeschen"
        android:text="LÃ¶schen"
        app:layout_constraintEnd_toEndOf="@+id/buttonNewEingabe"
        app:layout_constraintStart_toStartOf="@+id/buttonNewEingabe"
        app:layout_constraintTop_toBottomOf="@+id/buttonNewEingabe" />

    <Button
        android:id="@+id/buttonBestaetigen2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="setButtonBestaetigen2"
        android:text="\u2713"
        app:layout_constraintBottom_toBottomOf="@+id/editTextVektor2"
        app:layout_constraintStart_toEndOf="@+id/editTextVektor"
        app:layout_constraintTop_toTopOf="@+id/editTextVektor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Eingabe Vektor:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="Multiplikation mit einer Zahl"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="400dp" />

    <Button
        android:id="@+id/buttonNeu"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:onClick="buttonNeu"
        android:text="Neu"
        app:layout_constraintEnd_toStartOf="@+id/editTextZahl"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/editTextZahl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonNeu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/buttonNeu"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:text="Multiplikation mit zweier Vektoren"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNeu" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"
        android:text="Addition zweier Vektoren"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextErgebnisVektor" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="Multi. einer Zahl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextErgebnis2Vektor" />

    <Button
        android:id="@+id/buttonErgebnis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="setButtonErgebnis"
        android:text="Ergebnis:"
        app:layout_constraintEnd_toEndOf="@+id/buttonLoeschen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonLoeschen"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoeschen" />

    <EditText
        android:id="@+id/editTextVektor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edit_text_rectangle_with_border_shape"
        android:ems="10"
        android:hint="werte A"
        android:inputType="numberSigned|numberDecimal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonBestaetigen"
        app:layout_constraintStart_toStartOf="@+id/editTextArray2"
        app:layout_constraintTop_toBottomOf="@+id/buttonBestaetigen" />

    <EditText
        android:id="@+id/editTextVektor2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_rectangle_with_border_shape"
        android:ems="10"
        android:hint="werte B"
        android:inputType="numberSigned|numberDecimal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextVektor"
        app:layout_constraintStart_toStartOf="@+id/editTextVektor"
        app:layout_constraintTop_toBottomOf="@+id/editTextVektor" />

    <EditText
        android:id="@+id/editTextErgebnisZahl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextErgebnis2Vektor"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <EditText
        android:id="@+id/editTextErgebnis2Vektor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextErgebnisVektor"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/editTextErgebnisVektor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextZahl"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

</android.support.constraint.ConstraintLayout>
