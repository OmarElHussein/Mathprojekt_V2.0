<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorLightBlue" />
            <stroke android:width="1dp" android:color="@color/colorBlack" />
            <corners android:bottomLeftRadius="45dp" android:bottomRightRadius="45dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/colorDarkWhite" />
            <stroke android:width="1dp" android:color="@color/colorBlack" />
            <corners android:bottomLeftRadius="45dp" android:bottomRightRadius="45dp" />
        </shape>
    </item>

</selector>